                        @foreach (var item1 in Model.anakategori)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="home-tab" data-toggle="tab" href="#@item1.ID" role="tab" aria-selected="true">@item1.akat</a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#office_map" role="tab" aria-selected="false">Our Office</a>
                        </li>
                    </ul>
                    <!-- Choose Area Tab Menu -->
                    <!-- Choose Area Tab content -->
                    <div class="tab-content" id="myTabContent">
                        <!-- Popular Cars Tab Start -->
                        @foreach (var item1 in Model.anakategori)
                        {
                            <div class="tab-pane fade show" id="@item1.ID" role="tabpanel" aria-labelledby="home-tab">
                                <!-- Popular Cars Content Wrapper Start -->
                                <div class="popular-cars-wrap">
                                    <!-- Filtering Menu -->
                                    <div class="popucar-menu text-center">
                                        <a href="#" data-filter="*" class="active">Hepsi</a>
                                        @foreach (var item in Model.altkategori.Where(m => m.akat_id == item1.ID).ToList())
                                        {
                                            <a href="#" data-filter=".@item.ID">@item.bkat</a>
                                        }
                                    </div>

                                    <!-- Filtering Menu -->
                                    <!-- PopularCars Tab Content Start -->
                                    <div class="row popular-car-gird">
                                        <!-- Single Popular Car Start -->

                                        @foreach (var item in Model.araclar.Where(m => m.akat_id == item1.ID).ToList())
                                        {
                                            RentACarEntities baglan = new RentACarEntities();

                                            <div class="col-lg-4 col-md-6 @baglan.Bkategori.FirstOrDefault(m => m.ID==item.bkat_id).ID">
                                                <div class="single-popular-car">
                                                    <div class="p-car-thumbnails">
                                                        <a class="car-hover" href="@item.imaj.Replace("~", "..")">
                                                            <img src="@item.imaj.Replace("~", "..")" alt="JSOFT">
                                                        </a>
                                                    </div>

                                                    <div class="p-car-content">
                                                        <h3>
                                                            <a href="#">@item.marka @item.model</a>
                                                            <span class="price"><i class="fa fa-tag" ></i> Günlük @item.fiyat </span>


                                                        </h3>
                                                        
                                                        <div class="p-car-feature">
                                                            <a href="#">@item.yil</a>
                                                            <a href="#">@item.vtip</a>
                                                            <input readonly style="position:absolute;width:100px" value="@item.fiyat"id="fiyat_@item.ID" hidden />
                                                            <br />
                                                            <input type="number"class="form-control bg-light" id="gun" value="gun" min="1" max="7"style="width:250px"placeholder="Gün sayısı belirleyiniz." />
                                                            <button type="button" onclick="hesapla(@item.ID)"class="btn btn-light btn-dark"style="left:50px;position:absolute;">Hesapla</button>
                                                            <input class="form-control bg-light"type="number"style="width:100px;left:150px;position:absolute;"id="sonuc" value="sonuc" readonly />
                                                            <br />
                                                            <br />
                                                        </div>

                                                        <div>
                                                            <a href="/uye/UyeEkle/@item.ID" class="btn btn-success">Kirala</a>
                                                        </div>
                                                        <p style="color:green">@ViewBag.uyari</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <!-- Single Popular Car End -->
                                        <!-- Single Popular Car Start -->
                                        <!-- Single Popular Car End -->
                                    </div>
                                    <!-- PopularCars Tab Content End -->
                                </div>
                                <!-- Popular Cars Content Wrapper End -->
                            </div>
                        }
                        <!-- Popular Cars Tab End -->
                        <!-- Office Map Tab -->
                        <div class="tab-pane fade" id="office_map" role="tabpanel" aria-labelledby="contact-tab">
                            <div class="map-area">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3650.6538067244583!2d90.37092511435942!3d23.79533919297639!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c0cce3251ab1%3A0x7a2aa979862a9643!2sJSoft!5e0!3m2!1sen!2sbd!4v1516771096779"></iframe>
                            </div>
                        </div>
